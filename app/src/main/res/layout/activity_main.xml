<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="fr.tvbarthel.apps.shapi.MainActivity">

    <fr.tvbarthel.apps.shapi.game.FieldView
        android:id="@+id/activity_main_field_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/activity_main_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

    <fr.tvbarthel.apps.shapi.shape.ShapeView
        android:id="@+id/activity_main_shape"
        android:layout_width="@dimen/shape_size"
        android:layout_height="@dimen/shape_size"
        android:layout_gravity="center"
        android:padding="4dp" />

</FrameLayout>
